<% if @comment.parent_id == 0 %>

$("#comments").append("<%= j render :partial => 'comments/show', :locals => {:comment => @comment} %>");

<% else %>

$("#<%= @comment.parent_id %>").after("<%= escape_javascript(render :partial => 'comments/show', :locals => {:comment => @comment}) %>");
$("#<%= @comment.id %>").addClass("indent_" + (parseInt($("#<%= @comment.parent_id %> ").attr("reply_depth")) + 1));

<% end %>

