<%= form_for(@user, html: { class: "login-form form-horizontal" }) do |f| %>
<div id="error_explanation">
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li class="text-danger"><%= msg %></li>
    <% end %>
  </ul>
</div>

<div class="form-group">
  <%= f.label :name, class: "control-label col-sm-2" %>
  <div class="col-sm-3">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password, class: "control-label col-sm-2" %>
  <div class="col-sm-3">
    <%= f.password_field :password, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password_confirmation, "Password again", class: "control-label col-sm-2" %>
  <div class="col-sm-3">
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Join the crowd", class: "btn btn-default col-sm-2" %>
  </div>
</div>
<% end %>

